@{
    ViewBag.Title = "Jobs";
}

<!-- Trigger button (example job card button) -->
<button class="btn btn-outline-primary"
        data-bs-toggle="modal"
        data-bs-target="#jobDetailsModal">
    View Details
</button>

<!-- Modal -->
<div class="modal fade" id="jobDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content p-4" style="border-radius:16px;">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-start">
                <h5 class="fw-bold mb-0">Job Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <hr />

            <!-- Job Title -->
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <img src="https://via.placeholder.com/48"
                         style="width:48px;height:48px;border-radius:8px;object-fit:cover;" />

                    <div>
                        <h5 class="mb-1 fw-semibold">Senior Frontend Engineer</h5>
                        <div class="text-muted small">
                            <i class="bi bi-building"></i> TechFlow Solutions
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary px-4">
                    Apply Now
                </button>
            </div>

            <!-- Info Row -->
            <div class="row text-center mt-4 g-3">
                <div class="col-6 col-md-3">
                    <div class="p-2 rounded-3" style="background:#f8fafc;">
                        <div class="text-muted small mb-1">
                            <i class="bi bi-geo-alt"></i> Location
                        </div>
                        <div class="fw-medium">San Francisco, CA</div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="p-2 rounded-3" style="background:#f8fafc;">
                        <div class="text-muted small mb-1">
                            <i class="bi bi-briefcase"></i> Type
                        </div>
                        <div class="fw-medium">Full-time</div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="p-2 rounded-3" style="background:#f8fafc;">
                        <div class="text-muted small mb-1">
                            <i class="bi bi-currency-dollar"></i> Salary
                        </div>
                        <div class="fw-medium">$140K - $180K</div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="p-2 rounded-3" style="background:#f8fafc;">
                        <div class="text-muted small mb-1">
                            <i class="bi bi-calendar"></i> Posted
