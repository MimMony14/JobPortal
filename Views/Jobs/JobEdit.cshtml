@model Job

<div id="editOverlay" style="display:none; position:fixed; inset:0; background:rgba(15, 23, 42, 0.3); z-index:1100; backdrop-filter: blur(4px);">
    <div class="bg-white shadow-lg rounded-24 p-5 mx-auto" style="max-width: 800px; margin-top: 40px; position: relative;">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold m-0" style="color: #0f172a;">Edit Job Posting</h4>
            <button type="button" class="btn-close shadow-none" onclick="closeEdit()"></button>
        </div>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="JobId" />
            <input type="hidden" asp-for="CreateDate" />

            <div class="row g-4">
                <div class="col-md-6">
                    <label class="form-label small fw-bold text-muted text-uppercase">Job Title</label>
                    <input asp-for="Title" class="form-control rounded-3 border-light-subtle p-2 px-3 bg-light bg-opacity-50" placeholder="e.g. Product Designer" />
                </div>
                <div class="col-md-6">
                    <label class="form-label small fw-bold text-muted text-uppercase">Company ID</label>
                    <select asp-for="OrganizationId" class="form-select rounded-3 border-light-subtle p-2 px-3 bg-light bg-opacity-50" asp-items="ViewBag.OrganizationId"></select>
                </div>

                <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted text-uppercase">Location</label>
                    <input asp-for="Address" class="form-control rounded-3 border-light-subtle p-2 px-3 bg-light bg-opacity-50" placeholder="Remote / City" />
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted text-uppercase">Job Type</label>
                    <input asp-for="JobType" class="form-control rounded-3 border-light-subtle p-2 px-3 bg-light bg-opacity-50" placeholder="Full-time / Contract" />
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted text-uppercase">Salary Range</label>
                    <input asp-for="Salary" type="number" step="any" class="form-control rounded-3 border-light-subtle p-2 px-3 bg-light bg-opacity-50" placeholder="$80 - $120 / hr" />
                </div>

                <div class="col-12">
                    <label class="form-label small fw-bold text-muted text-uppercase">Tags (comma separated)</label>
                    <input asp-for="Tags" class="form-control rounded-3 border-light-subtle p-2 px-3 bg-light bg-opacity-50" placeholder="Figma, UI/UX, Design System" />
                </div>

                <div class="col-12">
                    <label class="form-label small fw-bold text-muted text-uppercase">Detailed Description</label>
                    <textarea asp-for="Description" rows="5" class="form-control rounded-3 border-light-subtle p-3 bg-light bg-opacity-50" placeholder="Describe the role..."></textarea>
                </div>
            </div>

            <div class="d-flex justify-content-end align-items-center gap-4 mt-5">
                <button type="button" onclick="closeEdit()" class="btn btn-link text-decoration-none text-muted fw-bold">Discard</button>
                <button type="submit" class="btn btn-primary rounded-3 px-4 py-2 fw-bold d-flex align-items-center gap-2">
                    <i class="bi bi-save"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function openEdit() {
        document.getElementById('editOverlay').style.display = 'block';
    }
    function closeEdit() {
        document.getElementById('editOverlay').style.display = 'none';
    }
</script>