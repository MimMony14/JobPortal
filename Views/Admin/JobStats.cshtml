@model IEnumerable<Job>

<style>
    .rounded-24 { border-radius: 24px !important; }
    .bg-green-soft { background-color: #f0fdf4; color: #16a34a; border: 1px solid #dcfce7; }
    .bg-blue-soft { background-color: #f0f9ff; color: #0284c7; border: 1px solid #e0f2fe; }
    .bg-purple-soft { background-color: #faf5ff; color: #9333ea; border: 1px solid #f3e8ff; }
</style>

<div id="Overlay" style="display:none; position:fixed; inset:0; background:rgba(15, 23, 42, 0.3); z-index:1000; backdrop-filter: blur(4px);">
    <div id="contents" class="bg-white shadow-lg rounded-24 p-4 mx-auto" style="max-width: 800px; margin-top: 60px; position: relative;">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold m-0" style="color: #0f172a;">Applicants for Senior Frontend Engineer</h4>
            <button class="btn-close shadow-none" onclick="closejs()"></button>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-4">
                <div class="p-3 rounded-24 bg-green-soft">
                    <small class="fw-bold d-block mb-1 opacity-75 small">TOTAL</small>
                    <h2 class="fw-bold m-0">1</h2>
                </div>
            </div>
            <div class="col-4">
                <div class="p-3 rounded-24 bg-blue-soft">
                    <small class="fw-bold d-block mb-1 opacity-75 small">PENDING</small>
                    <h2 class="fw-bold m-0">1</h2>
                </div>
            </div>
            <div class="col-4">
                <div class="p-3 rounded-24 bg-purple-soft">
                    <small class="fw-bold d-block mb-1 opacity-75 small">ACTION RATE</small>
                    <h2 class="fw-bold m-0">100%</h2>
                </div>
            </div>
        </div>

        <div class="border rounded-24 overflow-hidden" style="border-color: #f1f5f9 !important;">
            <table class="table mb-0">
                <thead style="background-color: #f8fafc;">
                    <tr class="text-muted small">
                        <th class="ps-4 py-3 border-0">APPLICANT</th>
                        <th class="py-3 border-0">STATUS</th>
                        <th class="pe-4 py-3 border-0 text-end">DECISIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 border-0">
                                <h5 class="text-muted fst-italic opacity-50">No applications yet.</h5>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var app in Model)
                        {
                            <tr class="align-middle border-bottom border-light">
                                <td class="ps-4 py-3">
                                    <div class="fw-bold text-dark">lj</div>
                                    <div class="small text-muted">lj@g.com</div>
                                </td>
                                <td class="py-3">
                                    <span class="badge bg-blue-soft border-0 text-uppercase px-2" style="font-size: 10px;">Pending</span>
                                </td>
                                <td class="pe-4 py-3 text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <i class="bi bi-check-circle text-success fs-5 cursor-pointer"></i>
                                        <i class="bi bi-x-circle text-danger fs-5 cursor-pointer"></i>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
function openjs() {
    document.getElementById('Overlay').style.display = 'block';
}
function closejs() {
    document.getElementById('Overlay').style.display = 'none';
}
document.getElementById('Overlay').addEventListener('click', function(e){
    if(e.target === this) closejs();
});
</script>