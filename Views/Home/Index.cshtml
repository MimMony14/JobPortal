@model IEnumerable<JobPortal.Models.Job>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Jobs";
    var role = Context.Session.GetString("Role");
}

<div class="row g-4">

    <!-- FILTER SIDEBAR -->
    <div class="col-md-3">
        <div class="card shadow-sm p-3">
            <h6 class="fw-bold mb-3">Filters</h6>

            <form method="get">

                <!-- KEYWORD -->
                <input name="keyword"
                       class="form-control mb-3"
                       placeholder="Search jobs..." />

                <!-- MULTI JOB TYPE -->
                <label class="fw-semibold mb-2">Job Type</label>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="types" value="Full-time">
                    <label class="form-check-label">Full-time</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="types" value="Part-time">
                    <label class="form-check-label">Part-time</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="types" value="Contract">
                    <label class="form-check-label">Contract</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="types" value="Freelancing">
                    <label class="form-check-label">Freelancing</label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" name="types" value="Internship">
                    <label class="form-check-label">Internship</label>
                </div>




                <button class="btn btn-primary w-100">
                    Apply Filter
                </button>
            </form>
        </div>
    </div>

    